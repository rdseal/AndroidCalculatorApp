<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.seal.myapplicationforapril4.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="match_parent"
        android:background="@color/greyBackground"
        android:paddingBottom="25dp"
        android:gravity="right"
        android:id="@+id/topText"
        android:text="0.0"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClear"
            android:onClick="clickedClear"
            android:text="Clear"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSquare"
            android:onClick="clickedSquare"
            android:text="x^2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSquareRoot"
            android:onClick="clickedSquareRoot"
            android:text="sqrt"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:onClick="clickedDivide"
            android:text="/"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSeven"
            android:onClick="clickedSeven"
            android:text="7"
            />
        <Button
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEight"
            android:onClick="clickedEight"
            android:text="8"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNine"
            android:onClick="clickedNine"
            android:text="9"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            android:onClick="clickedMultiply"
            android:text="*"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFour"
            android:onClick="clickedFour"
            android:text="4"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFive"
            android:onClick="clickedFive"
            android:text="5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSix"
            android:onClick="clickedSix"
            android:text="6"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:onClick="clickedMinus"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOne"
            android:onClick="clickedOne"
            android:text="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTwo"
            android:onClick="clickedTwo"
            android:text="2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonThree"
            android:onClick="clickedThree"
            android:text="3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:onClick="clickedPlus"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonZero"
            android:onClick="clickedZero"
            android:text="0"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDecimal"
            android:onClick="clickedDecimal"
            android:text="."
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNegative"
            android:onClick="clickedNegative"
            android:text="-"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:onClick="clickedEquals"
            android:text="="
            />
    </LinearLayout>
</LinearLayout>
